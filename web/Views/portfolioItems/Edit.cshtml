@model web.ViewModels.PortfolioItemsViewModel
@addTagHelper* ,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";

}


<div style="margin:150px">

    <h4>portfolio Item</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="id" class="control-label"></label>
                    <input readonly asp-for="id" class="form-control" />
                    <span asp-validation-for="id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="projectName" class="control-label"></label>
                    <input  required asp-for="projectName" class="form-control" />
                    <span asp-validation-for="projectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>
                    <input required asp-for="description" class="form-control" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="imageUrl" class="control-label"></label>
                    <input required asp-for="File" type="file" class="form-control" />
                    <span asp-validation-for="imageUrl" class="text-danger"></span>
                    <input type="hidden" asp-for="imageUrl" class="form-control" />

                </div>
                <div>
                    <label class="control-label">Image</label>
                    <br>
                    <img style="width:50px;height:50px; margin-bottom:10px;" src="~/img/portfolio/@Model.imageUrl" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>


                </div>
            </form>
        </div>
    </div>

</div>

