@model web.ViewModels.PortfolioItemsViewModel
@addTagHelper* ,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
   
}


<div style="margin:150px;">
    <h4> portfolio Items</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="projectName" class="control-label"></label>
                    <input required asp-for="projectName" class="form-control" />
                    <span asp-validation-for="projectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>
                    <input required asp-for="description" class="form-control" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="File" class="control-label"></label>
                    <input required type="file" asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


   

   




